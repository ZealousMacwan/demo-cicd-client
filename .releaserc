{
  "branches": [
    { "name": "main", "prerelease": false }, // For production releases (no suffix)
    { "name": "dev/**", "prerelease": "dev" }, // Adds '-dev' suffix to the version
    { "name": "release/**", "prerelease": "release" } // Adds '-release' suffix
  ],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    "@semantic-release/changelog",
    "@semantic-release/github",
    "@semantic-release/git"
  ]
}